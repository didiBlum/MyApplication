<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/include2"
    android:layout_marginBottom="40dp"
    tools:showIn="@layout/activity_with_cells">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:paddingRight="0dp"
        android:src="@drawable/custom_icon" />

    <TextView
        android:id="@+id/custom_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView2"
        android:drawablePadding="10dp"
        android:textSize="16sp"
        android:text="@string/custom_date" />

    <TextView
        android:id="@+id/customTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_title_textview"
        android:layout_toEndOf="@+id/imageView2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#007f00"
        android:textStyle="bold"
        android:visibility="invisible"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/imageButton"
        android:src="@drawable/choose_custom_date_icon"
        android:text="Choose dates"
        android:layout_alignParentRight="true"
        android:onClick="setDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp" />

</RelativeLayout>